<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    android:orientation="vertical">

    <include layout="@layout/item_head" />

    <LinearLayout
        style="@style/match_parent"
        android:orientation="vertical"
        android:background="?content_bg">


        <TextView style="@style/wrap_content"
            android:layout_marginTop="@dimen/main_margin"
            android:drawablePadding="@dimen/main_padding"
            android:drawableTop="@drawable/ic_launcher"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:id="@+id/version"
            android:textColor="?main_text_color"/>
        <TextView style="@style/match_width"
            android:gravity="center"
            android:textColor="?main_text_color"
            android:text="@string/about_msg"/>

        <TextView style="@style/match_width"
            android:gravity="center"
            android:textColor="?read_text_color"
            android:text="@string/copyright"
            android:layout_margin="@dimen/main_margin"/>
    </LinearLayout>
</LinearLayout>